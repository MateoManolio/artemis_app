<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash/starting theme para Android <= 11.
         Igual lo conservamos por compatibilidad, aunque tu foco sea 12+. -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Muestra tu layer-list con pattern mientras Flutter inicia -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Evita flashes de preview en algunos devices -->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Tema que se aplica APENAS termina el splash del sistema (12+)
         y también es el tema detrás del contenido Flutter. -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Dejamos el pattern para que se vea hasta el primer frame de Flutter -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

</resources>