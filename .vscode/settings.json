{
  // Formatear automáticamente al guardar
  "editor.formatOnSave": true,
  
  // Formatear automáticamente al pegar (opcional)
  "editor.formatOnPaste": true,
  
  // Usar el formateador de Dart
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  
  // Formatear también archivos YAML (opcional)
  "[yaml]": {
    "editor.formatOnSave": true
  },
  
  // Configuración de Dart/Flutter
  "dart.lineLength": 80,
  "dart.runPubGetOnPubspecChanges": "always",
  
  // Excluir archivos generados de la búsqueda
  "files.exclude": {
    "**/.dart_tool": true,
    "**/.git": true,
    "**/.idea": true,
    "**/build": true
  },
  
  // Excluir archivos generados del watcher
  "files.watcherExclude": {
    "**/.dart_tool/**": true,
    "**/build/**": true,
    "**/.flutter-plugins-dependencies": true
  }
}

